<%= form_for([@review.place, @review]) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new review...." %>
    <br>
    <span>Choose a place for this review from the dropdown menu.</span>
    <%= f.collection_select :place_id, Place.order(:name),:id,:name, include_blank: true %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>